    "/api/v1/games": {
      "get": {
        "description": "List all games for an User in the database",
        "operationId": "ScoresApiWeb.GameController.index",
        "parameters": [
          {
            "description": "Bearer <> JWT Token",
            "in": "header",
            "name": "authorization",
            "required": true,
            "type": "string",
            "x-example": "Bearer jwt_token"
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "examples": {
              "application/json": [
                {
                  "game_id": 1,
                  "high_pts_to_win": false,
                  "inserted_at": "2017-02-08T12:34:55Z",
                  "players": [
                    "raj",
                    "raj1"
                  ],
                  "title": "Rummy"
                },
                {
                  "game_id": 2,
                  "high_pts_to_win": true,
                  "inserted_at": "2017-02-08T12:34:55Z",
                  "players": [
                    "raj",
                    "raj1"
                  ],
                  "title": "Rummy1"
                }
              ]
            },
            "schema": {
              "$ref": "#/definitions/GamesResponse"
            }
          }
        },
        "summary": "List Games for a User",
        "tags": [
          "Game"
        ]
      },
      "post": {
        "consumes": [
          "application/json"
        ],
        "description": "Creates Game for an User",
        "operationId": "ScoresApiWeb.GameController.create",
        "parameters": [
          {
            "description": "Bearer <> JWT Token",
            "in": "header",
            "name": "authorization",
            "required": true,
            "type": "string",
            "x-example": "Bearer jwt_token"
          },
          {
            "description": "The Game details",
            "in": "body",
            "name": "game",
            "required": false,
            "schema": {
              "$ref": "#/definitions/CreateGameRequest"
            },
            "x-example": {
              "game": {
                "high_pts_to_win": true,
                "players": [
                  "Raj",
                  "Raj1"
                ],
                "title": "Rummy"
              }
            }
          }
        ],
        "produces": [
          "application/json"
        ],
        "responses": {
          "201": {
            "description": "Game created OK",
            "examples": {
              "application/json": {
                "game_id": 2,
                "high_pts_to_win": true,
